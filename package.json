{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\" \"npm start\" \"npm run dev:content\"",
    "dev:css": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --watch",
    "dev:remix": "remix watch",
    "dev:content": "node ./scripts/watch-content.js",
    "build": "npm run build:css && npm run build:remix && node ./scripts/generate-build-info.js",
    "build:css": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --minify",
    "build:remix": "remix build",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "debug": "miniflare --inspect --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish",
    "act": "act compile-mdx -j compile --secret-file .env"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "error-stack-parser": "^2.0.6",
    "mdx-bundler": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reading-time": "^1.5.0",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "chokidar": "^3.5.2",
    "concurrently": "^7.0.0",
    "esbuild": "0.13.14",
    "esbuild-runner": "^2.2.1",
    "miniflare": "2.0.0-next.3",
    "node-fetch": "^2.6.6",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
