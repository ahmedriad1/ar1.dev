{
  "private": true,
  "name": "ar1.dev",
  "description": "My website",
  "license": "",
  "main": "dist/worker.js",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./dist ./build ./public/build ./app/styles/tailwind.css",
    "postinstall": "remix setup cloudflare-workers",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "dev:worker": "cross-env NODE_ENV=development node ./scripts/build.js",
    "dev": "npm run clean && pm2-dev ./pm2.config.js",
    "dev:css": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --watch",
    "dev:remix": "remix watch",
    "dev:content": "node ./scripts/watch-content.js",
    "build": "npm run build:css && npm run build:remix && node ./scripts/generate-build-info.js",
    "build:css": "tailwindcss -i styles/tailwind.css -o app/styles/tailwind.css --minify",
    "build:remix": "remix build",
    "build:worker": "cross-env NODE_ENV=production node ./scripts/build.js",
    "debug": "miniflare --debug --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "error-stack-parser": "^2.0.6",
    "lodash": "^4.17.21",
    "mdx-bundler": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reading-time": "^1.5.0",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "esbuild": "0.13.14",
    "esbuild-runner": "^2.2.1",
    "miniflare": "2.0.0-next.3",
    "node-fetch": "^2.6.6",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  }
}
